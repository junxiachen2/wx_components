.brave-toast {
    position: fixed;
    bottom: 10%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
    background: rgba(0, 0, 0, .7);
    color: #fff;
    font-size: 28rpx;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 20rpx 36rpx;
    text-align: center;
    border-radius: 20px;
    z-index: 100;
}