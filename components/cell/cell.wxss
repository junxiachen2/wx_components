.brave-cell{
    position: relative;
    padding: 24rpx 30rpx;
    display: flex;
    align-items: center;
    line-height: 1.4;
    font-size: 28rpx;
}
.brave-cell::after{
    content: ' ';
    position: absolute;
    display: block;
    width: calc(100% - 30rpx);
    border-bottom: 1rpx solid #ddd;
    left: 30rpx;
    bottom: 0;
}
.brave-cell__icon{
    margin-right: 20rpx;
}
.brave-cell__icon:empty{
    display: none;
}
.brave-cell__icon image{
    width: 30rpx;
    height: 30rpx;
    margin-top: 10rpx;
}
.brave-cell__bd{
    flex: 1;
}
.brave-cell__text{
    line-height: 48rpx;
    font-size: 28rpx;
}
.brave-cell__desc {
    line-height: 1.2;
    font-size: 12px;
    color: #666;
}
.brave-cell__ft{
    position: relative;
    text-align: right;
    color: #666;
}
.brave-cell.last-cell::after{
    display: none;
}
.brave-cell--access .brave-cell__ft{
    padding-right: 26rpx;
}
.brave-cell--access .brave-cell__ft::after{
    content: ' ';
    position: absolute;
    top: 50%;
    right: 4rpx;
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c8c8c8;
    border-style: solid;
    transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}